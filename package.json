{
    "name": "node-boilerplate-gen",
    "version": "0.1.0",
    "author": {
        "email": "constantinoedes@gmail.com",
        "name": "Constantino Edes",
        "url": "https://constantinoedes.dev"
    },
    "description": "Node interactive template for build projects blazingly fast.",
    "bugs": "https://github.com/constanedes/node-boilerplate-gen/issues",
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsc",
        "prepare": "git config --local core.hooksPath .githooks",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:watch": "tsc -w",
        "prestart": "pnpm i && pnpm run build",
        "lint": "rome format src --verbose && rome check src --verbose",
        "dev": "nodemon build/src/index.js",
        "start": "node build/src/index.js",
        "format": "rome format src --write"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/constanedes/node-project-boilerplate"
    },
    "keywords": [
        "typescript",
        "javascript",
        "node",
        "template",
        "boilerplate"
    ],
    "engines": {
        "node": ">= 16"
    },
    "funding": {
        "type": "individual",
        "url": "https://www.linkedin.com/in/constantino-edes/"
    },
    "private": false,
    "license": "MIT",
    "devDependencies": {
        "@types/figlet": "1.5.6",
        "@types/fs-extra": "11.0.1",
        "@types/gradient-string": "1.1.2",
        "@types/inquirer": "9.0.3",
        "@types/node": "20.2.5",
        "nodemon": "2.0.22",
        "typescript": "5.0.4"
    },
    "dependencies": {
        "chalk": "5.2.0",
        "commander": "10.0.1",
        "execa": "7.1.1",
        "figlet": "1.6.0",
        "fs-extra": "11.1.1",
        "gradient-string": "2.0.2",
        "inquirer": "9.1.5",
        "ora": "6.3.0",
        "rome": "12.1.3",
        "sort-package-json": "2.4.1",
        "type-fest": "3.8.0"
    }
}
